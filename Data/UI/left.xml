<elements>

	<element type="LeftWindow" style="MyWindow">
		<attribute name="Vert Alignment" value="Bottom" />
		<attribute name="Horiz Alignment" value="Left" />
		<attribute name="Layout Mode" value="Vertical" />
		<attribute name="Layout Spacing" value="{spaceX}" />
        <attribute name="Layout Border" value="{spaceX} {spaceY} {spaceX} {spaceY}" />
		<attribute name="Min Size" value="{iconX+spaceX + iconX/2} {resY/2}"/>
		<attribute name="Max Size" value="{iconX+spaceX + iconX/2} {resY/2}"/>
		<attribute name="Position" value="0 -{4*iconY+2*spaceY}"/>
	</element>
	
	<element type="BuildWindow" style="LeftWindow">		
	</element>
	
	<element type="UnitsWindow" style="LeftWindow">	
	</element>
	
	<element type="OrdersWindow" style="LeftWindow">
	</element>
	
	<element type="Sprite">
        <attribute name="Vert Alignment" value="Center" />
		<attribute name="Horiz Alignment" value="Center" />
		<attribute name="My Size" value="{iconX-spaceX} {iconY-spaceY}" />
		<attribute name="Percent HotSpot" value="0.5 0.5" />
		<attribute name="Opacity" value="0.8" />
    </element>
	
	<element type="MyListView" style="ListView" >
		<attribute name="Auto Show/Hide Scrollbars" value="false true"/>
		<attribute name="Highlight Mode" value="Always" />
		<attribute name="Select On Click End" value="false" />
		<element type="ScrollBar" internal="true">
			<attribute name="Is Visible" value="false" />
			<attribute name="Size" value="0 {iconX/4}" />
        </element>
        <element type="ScrollBar" internal="true">
			<attribute name="Horiz Alignment" value="Left" />
			<attribute name="Size" value="{iconX/4} 0" />
			<attribute name="Max Size" value="{iconX/4} 2048" />
			<attribute name="Min Size" value="{iconX/4} {iconY/4}" />
        </element>
        <element type="BorderImage" internal="true">
			<attribute name="Horiz Alignment" value="Right" />
			<attribute name="Hover Image Offset" value="null" />
			<attribute name="Layout Mode" value="Vertical" />
			<attribute name="Layout Border" value="{spaceX/2} {spaceY/2} {spaceX/2} {spaceY/2}" />
			<attribute name="Max Size" value="{iconX+spaceX + iconX/2} {resY/2-spaceY*2}"/>
			<element internal="true">
                <attribute name="Layout Spacing" value="{spaceY}" />
            </element>
        </element>
	</element>
	
	
</elements>
