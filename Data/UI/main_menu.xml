<elements>
	
	<element type="MainMenuWindow" style="MyWindow">
		<attribute name="Vert Alignment" value="Center" />
		<attribute name="Horiz Alignment" value="Left" />
		<attribute name="Position" value="{iconX*1.5} 0" />
		<attribute name="Layout Mode" value="Vertical" />
		<attribute name="Layout Spacing" value="{iconY/2}" />
        <attribute name="Layout Border" value="{iconX} {iconY} {iconX} {iconY}" />
		<attribute name="Min Size" value="{iconX*6} {bigY/2}"/>
		<attribute name="Max Size" value="{iconX*9} {bigY}"/>
	</element>
	
	<element type="MainMenuDetailsWindow" style="MyWindow">
		<attribute name="Vert Alignment" value="Center" />
		<attribute name="Horiz Alignment" value="Right" />
		<attribute name="Position" value="{-iconX*1.5} 0" />
		<attribute name="Layout Spacing" value="{spaceY}" />
        <attribute name="Layout Border" value="{spaceX} {spaceY} {spaceX} {spaceY}" />
		<attribute name="Min Size" value="{bigX+iconX*3} {bigY}"/>
		<attribute name="Max Size" value="{bigX+iconX*3} {bigY*1.5}"/>
	</element>
	
	<element type="MainMenuSprite">
		<attribute name="Vert Alignment" value="Center" />
		<attribute name="Horiz Alignment" value="Left" />
		<attribute name="My Size" value="{iconX-2*spaceX} {iconY-2*spaceY}" />
		<attribute name="Percent HotSpot" value="0.0 0.5" />
		<attribute name="Position" value="{spaceX} 0"/>
    </element>
	
	<element type="MainMenuButton"  style="Button" >
        <attribute name="Horiz Alignment" value="Center" />
		<attribute name="Min Size" value="{iconX*4} {iconY}" />
		<attribute name="Max Size" value="{iconX*4} {iconY}" />
    </element>
	
	<element type="MainMenuText" style="MyText" >
		<attribute name="Text Alignment" value="Right" />
		<attribute name="Horiz Alignment" value="Center" />
		<attribute name="Vert Alignment" value="Center" />
	</element>
	
		<element type="MainMenuTitle" style="MyText" >
		<attribute name="Font Size" value="{fontSize*1.5}" />
		<attribute name="Vert Alignment" value="Top" />
		<attribute name="Horiz Alignment" value="Center" />
		<attribute name="Position" value="0 {iconY} "/>
	</element>
	
	<element type="MainMenuMock">
		<attribute name="Vert Alignment" value="Top" />
		<attribute name="Horiz Alignment" value="Center" />
		<attribute name="Min Size" value="{100} {0}" />
        <attribute name="Max Size" value="{1000} {1000}" />
		<attribute name="Position" value="0 {iconY*3}"/>
		<attribute name="Layout Mode" value="Vertical" />
		<attribute name="Layout Spacing" value="{spaceY}" />
	</element>
	
	<element type="MainMenuHelpMock" style="MainMenuMock">
		<attribute name="Layout Mode" value="Horizontal" />
	</element>
	
	<element type="HelpList" style="ListView" >
	
		<attribute name="Min Size" value="{iconX*4} {bigY/2}" />
        <attribute name="Max Size" value="{iconX*4} {bigY-iconY*4}" />

		<attribute name="Horiz Alignment" value="Left" />
		<attribute name="Vert Alignment" value="Center" />
		<attribute name="Position" value="{iconX} 0"/>
	</element>
	
	<element type="HelpContent" style="ScrollView" >
		<attribute name="Min Size" value="{bigX-iconX*4} {bigY-iconY*4}" />
        <attribute name="Max Size" value="{bigX-iconX*4} {bigY-iconY*4}" />
		<attribute name="Horiz Alignment" value="Right" />
		<attribute name="Vert Alignment" value="Center" />
		<attribute name="Position" value="{-iconX} 0"/>
	</element>
	
	<element type="HelpContentText" style="MyText" >
		<attribute name="Word Wrap" value="true" />
		<attribute name="Horiz Alignment" value="Center" />
		<attribute name="Vert Alignment" value="Center" />
	</element>
	
	<element type="HelpListButton" style="Button" >
		<attribute name="Min Size" value="{iconX*2} {iconY*2/3}"/>
		<attribute name="Max Size" value="{iconX*4} {iconY*2/3}"/>
	</element>
	
	<element type="HelpListText" style="MyText" >
		<attribute name="Font Size" value="{fontSize}" />
		<attribute name="Vert Alignment" value="Center" />
		<attribute name="Horiz Alignment" value="Center" />
	</element>
	
</elements>
